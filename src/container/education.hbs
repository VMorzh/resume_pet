{{!--
Це код container файлу для edu* сторінки,
в якому міститься код, котрий буде віддаватися по шляху (PATH) - "/summary"
--}}

<div>
    {{#with main}}
    <main>
        <section>
            {{> title data="My education" big=true}}
            <ul>
                {{#each educations}}
                <li>
                    {{name}}
                    {{#unless isEnd}} (in process) {{/unless}}

                </li>
                {{/each}}
            </ul>
        </section>
        <section>
            {{> title data="My certificates"}}
            <ul>
                {{#each certificates}}
                <li>
                    {{name}}
                    {{#if isNew}} ({{id}}) {{/if}}

                </li>
                {{/each}}
            </ul>
        </section>
    </main>
    {{/with}}


</div>

